<h1>Listing listings</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Floor</th>
      <th>Unit</th>
      <th>Sqft</th>
      <th>Bath</th>
      <th>Bed</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><%= listing.id %></td>
        <td><%= listing.floor %></td>
        <td><%= listing.unit %></td>
        <td><%= listing.sqft %></td>
        <td><%= listing.bath %></td>
        <td><%= listing.bed %></td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'History', listing_rents_path(listing) %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

